{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@dtos/*": [
        "dtos/*"
      ],
      "@routes/*": [
        "routes/*"
      ]     
    }
  },
  "include": [
    "src"
  ]
}